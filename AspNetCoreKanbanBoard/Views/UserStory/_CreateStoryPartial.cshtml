@model AspNetCoreKanbanBoard.Models.UserStory

<div class="card">
    <div class="card-body">
        <form method="post" asp-action="CreateUserStory">
            <div class="form-group">
                <label class="control-label">Create new User Story...</label>
                <input asp-for="Title" class="form-control" placeholder="Enter title..." />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>
